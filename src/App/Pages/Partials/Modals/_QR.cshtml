<div id="qr-data" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">QR data</h5>
                <button class="close" data-dismiss="modal" type="button">&times;</button>
            </div>
            <div class="modal-body">
                <form id="qr-data-form" class="needs-validation" novalidate>
                    <div class="mb-3 invisible d-none">
                        <input id="id-on-qr-form" class="form-control" name="Id" type="text">
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input id="WithBatch" class="form-check-input" name="WithBatch" type="checkbox">
                            <label class="form-check-label" for="WithBatch">With batch id</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input id="WithLogo" class="form-check-input" name="WithLogo" type="checkbox">
                            <label class="form-check-label" for="WithLogo">With logo</label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="AdditionalText">Additional Text</label>
                        <input id="AdditionalText" class="form-control" name="AdditionalText" type="text">
                    </div>
                    <div class="mb-3">
                        <button id="qr-image-data-submit" class="btn btn-outline-secondary" type="button">Update image</button>
                    </div>
                </form>
                <div class="modal-footer">
                    <div id="qr-image" style="margin: 0 auto;"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="qr-print-data-submit" class="btn btn-outline-secondary" type="button">Print</button>
                <button id="qr-save-data-submit" class="btn btn-outline-secondary" type="button">Save</button>
            </div>
        </div>
    </div>
</div>
